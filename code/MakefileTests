LDFLAGS = -lm
CXX = mpic++
CXXFLAGS = -O3 -lstdc++ -g

GTESTDIR = /Users/nathanmahynski/Documents/synced_folder/programs
GTEST_HEADERS = $(GTESTDIR)/gtest-1.6.0/include/gtest/*.h \
	      $(GTESTDIR)/gtest-1.6.0/include/gtest/internal/*.h

GTESTFLAGS = -I$(GTESTDIR)/gtest-1.6.0/include -lpthread
GTEST_SRCS_ = $(GTESTDIR)/src/*.cc $(GTESTDIR)/src/*.h $(GTEST_HEADERS)

all: tests

tests : test_all.o initialize.o read_xml.o read_interaction.o force_calc.o system.o integrator.o domain_decomp.o misc.o interaction.o atom.o $(GTESTDIR)/gtest-1.6.0/make/gtest_main.a
	$(CXX) $(CXXFLAGS) $(GTESTFLAGS) -o $@ $^

gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTESTDIR) $(CXXFLAGS) -c \
            $(GTESTDIR)/src/gtest-all.cc

gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTESTDIR) $(CXXFLAGS) -c \
            $(GTESTDIR)/src/gtest_main.cc

gtest.a : gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(AR) $(ARFLAGS) $@ $^
	
	
test_all.o : test_all.cpp $(GTEST_HEADERS)
	$(CXX) $(CXXFLAGS) $(GTESTFLAGS) -c $<

%.o : %.cc
	$(CXX) $(CXXFLAGS) -c $<

clean :
	rm *.o tests


